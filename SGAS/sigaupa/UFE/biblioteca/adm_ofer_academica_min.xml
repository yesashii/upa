	 mensajeError="No Existen Datos Para Los Parámetros De Búsqueda." 
	 colorBase="#F1F1E4" editar="true" 	anchoTabla="98%" variable="em" nuevaVentana="true" nuevaVentanaAlto="500" nuevaVentanaAncho="800" >
