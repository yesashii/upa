		   " where a.carr_ccod=b.carr_ccod " & vbCrLf & _
		   " and b.asig_ccod=d.asig_ccod and b.sede_ccod=f.sede_ccod " & vbCrLf & _
		   " and b.jorn_ccod=e.jorn_ccod  and a.carr_ccod = es.carr_ccod" & vbCrLf &_
		   " and b.secc_tdesc <>'Poblamiento' " & vbCrLf & _
		   " and es.espe_ccod in (Select espe_ccod from sis_especialidades_usuario where pers_ncorr='"&pers_ncorr_encargado&"')" & vbCrLf &_
		   " and cast(b.peri_ccod as varchar)='"&peri&"' order by f.sede_tdesc,a.carr_tdesc asc" 

 f_busqueda.inicializaListaDependiente "lBusqueda", consulta

 f_busqueda.Siguiente
 
'----------------------------------------------------------------------------------
set f_asignaturas = new CFormulario
f_asignaturas.Carga_Parametros "encuesta_directores_docentes.xml", "formu_carga"
f_asignaturas.Inicializar conexion

 if carr_ccod= "" then
    codigo = "  "
	f_asignaturas.consultar "select '' "
	f_asignaturas.AgregaParam "mensajeError", "Ingrese criterio de busqueda"
 end if

if (todas = "" or todas="N") then
 	 filtro = ""
else
	 filtro = " and (select count(*) from dir_encuesta_docente_hhrr tt where tt.secc_ccod=a.secc_ccod and tt.pers_ncorr=d.pers_ncorr) > 0 "
end if	
   
consulta  = " select distinct a.asig_ccod,e.asig_tdesc,a.secc_ccod,d.pers_ncorr,a.secc_tdesc, " & vbCrLf &_
		    "  d.pers_tnombre + ' ' + d.pers_tape_paterno + ' ' + d.pers_tape_materno as docente, " & vbCrLf &_
		    " (select case count(*) when 0 then 'No' else 'Si' end from dir_encuesta_docente_hhrr tt  " & vbCrLf &_
		    " where tt.secc_ccod=a.secc_ccod and tt.pers_ncorr=d.pers_ncorr) as evaluado  " & vbCrLf &_
		    " from secciones a, bloques_horarios b, bloques_profesores c, personas d, " & vbCrLf &_
			" asignaturas e " & vbCrLf &_
			"		where a.secc_ccod=b.secc_ccod and b.bloq_ccod=c.bloq_ccod and c.pers_ncorr=d.pers_ncorr " & vbCrLf &_ 
			"		and a.asig_ccod=e.asig_ccod and cast(a.peri_ccod as varchar)='"&peri&"' "&filtro& vbCrLf &_
		    " and cast(a.sede_ccod as varchar)='"&sede_ccod&"' and a.carr_ccod='"&carr_ccod&"' and cast(a.jorn_ccod as varchar)='"&jorn_ccod&"' " & vbCrLf &_
		    " order by docente "
			 
if Request.QueryString <> "" then
     f_asignaturas.consultar consulta
else
	f_asignaturas.consultar "select * from secciones where 1=2 "
	f_asignaturas.AgregaParam "mensajeError", "Ingrese criterio de busqueda"
end if

