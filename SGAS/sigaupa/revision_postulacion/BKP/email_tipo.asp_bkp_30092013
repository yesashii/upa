postulante   = conexion.consultauno("SELECT protic.initCap(pers_tnombre + ' ' + pers_tape_paterno + ' ' + pers_tape_materno) FROM personas_postulante WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr&"'")
rut      = conexion.consultauno("SELECT cast(pers_nrut as varchar)+'-'+pers_xdv FROM personas_postulante WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr&"'")
email_postulante    = conexion.consultauno("SELECT lower(pers_temail) FROM personas_postulante WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr&"'")
nombre   = conexion.consultauno("SELECT protic.initCap(pers_tnombre) FROM personas_postulante WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr&"'")
rut_agente = negocio.obtenerUsuario
if rut_agente = "17176569" then
	rut_agente =  "14632983" 
end if
agente   = conexion.consultauno("SELECT protic.initCap(pers_tnombre + ' ' + pers_tape_paterno + ' ' + pers_tape_materno) FROM personas WHERE cast(pers_nrut as varchar) = '"&rut_agente&"'")
pers_ncorr_agente   = conexion.consultauno("SELECT pers_ncorr FROM personas WHERE cast(pers_nrut as varchar) = '"&rut_agente&"'")
email_agente   = conexion.consultauno("SELECT pers_temail FROM agentes_postulacion WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr_agente&"'")
fono_agente   = conexion.consultauno("SELECT pers_tfono FROM agentes_postulacion WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr_agente&"'")
sede_agente   = conexion.consultauno("SELECT protic.initCap(sede_tdesc) FROM agentes_postulacion a, sedes b WHERE a.sede_ccod=b.sede_ccod and cast(pers_ncorr as varchar) = '"&pers_ncorr_agente&"'")
if esVacio(email_agente) then
	email_agente   = conexion.consultauno("SELECT pers_temail FROM admi_agentes_postulacion WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr_agente&"'")
	fono_agente   = conexion.consultauno("SELECT pers_tfono FROM admi_agentes_postulacion WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr_agente&"'")
	sede_agente   = "UNIVERSIDAD DEL PACIFICO"
end if 
