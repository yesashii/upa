	agente            = "Patrick Laureau"
	pers_ncorr_agente = "152584"
	email_agente      = "plaureau@upacifico.cl"
	fono_agente       = "+56 (2) 3306400 / +56 (2) 3306407"
	sede_agente 	  = "Campus Lyon"
elseif rut_agente = "6939582" then ' para mostrar a Sonia Soler los postulados a magister
	agente            = "Sonia Soler"
	pers_ncorr_agente = "11412"
	email_agente      = "ssoler@upacifico.cl"
	fono_agente       = "+56 (2) 8625322"
	sede_agente 	  = "Sede Las Condes"
elseif rut_agente = "11592558" then ' para mostrar a Sonia Soler los postulados a magister
	agente            = "Marco Perelli H."
	pers_ncorr_agente = "24180"
	email_agente      = "mperelli@upacifico.cl"
	fono_agente       = "+56 (2) 8625311"
	sede_agente 	  = "Sede Las Condes"			
end if
'----------------------------------------------------------------
nombre_p          = conexion.consultauno("SELECT protic.initcap(substring(pers_tnombre,0, case charindex(' ' ,pers_tnombre) when 0 then 20 else charindex(' ' ,pers_tnombre) end  )) FROM personas_postulante WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr&"'")
apellido_p        = conexion.consultauno("SELECT replace(protic.initCap(pers_tape_paterno) ,' ','%20') FROM personas_postulante WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr&"'")
rut_p             = conexion.consultauno("SELECT cast(pers_nrut as varchar) + '-' + pers_xdv FROM personas_postulante WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr&"'")
email_p           = email_postulante
cod_sede   	      = conexion.consultauno("SELECT b.sede_ccod FROM agentes_postulacion a, sedes b WHERE a.sede_ccod=b.sede_ccod and cast(pers_ncorr as varchar) = '"&pers_ncorr_agente&"'")
cod_agente_sede   = conexion.consultauno("SELECT id FROM agentes_postulacion WHERE cast(pers_ncorr as varchar) = '"&pers_ncorr_agente&"'")
tipo_mensaje      = tipo
'----------------------------------------------------------------
if tipo = "1" then
