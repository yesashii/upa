	<td bgcolor="#FFFFCC"><div align="center"><strong>Carrera</strong></div></td>
    <td bgcolor="#FFFFCC"><div align="center"><strong>Jornada</strong></div></td>
    <td bgcolor="#FFFFCC"><div align="center"><strong>Rut</strong></div></td>
	<td bgcolor="#FFFFCC"><div align="center"><strong>Nombre</strong></div></td>
	<td bgcolor="#FFFFCC"><div align="center"><strong>Fecha proceso</strong></div></td>
	<%if tipo="2" then%>
	<td bgcolor="#FFFFCC"><div align="center"><strong>Estado</strong></div></td>
	<%end if%>
	<td bgcolor="#FFFFCC"><div align="center"><strong>Fono</strong></div></td>
	<td bgcolor="#FFFFCC"><div align="center"><strong>Celular</strong></div></td>
	<td bgcolor="#FFFFCC"><div align="center"><strong>Email</strong></div></td>
	<td bgcolor="#FFFFCC"><div align="center"><strong>Dirección</strong></div></td>
	<td bgcolor="#FFFFCC"><div align="center"><strong>Comuna</strong></div></td>
  </tr>
  <% fila = 1 
     while f_matriculados.Siguiente %>
  <tr> 
    <td><div align="left"><%=fila%></div></td>
	<td><div align="left"><%=f_matriculados.ObtenerValor("sede")%></div></td>
	<td><div align="left"><%=f_matriculados.ObtenerValor("carrera")%></div></td>
    <td><div align="left"><%=f_matriculados.ObtenerValor("jornada")%></div></td>
    <td><div align="left"><%=f_matriculados.ObtenerValor("rut")%></div></td>
	<td><div align="left"><%=f_matriculados.ObtenerValor("nombre")%></div></td>
	<td><div align="left"><%=f_matriculados.ObtenerValor("fecha")%></div></td>
	<%if tipo="2" then%>
	<td><div align="left"><%=f_matriculados.ObtenerValor("estado")%></div></td>
	<%end if%>
	<td><div align="left"><%=f_matriculados.ObtenerValor("fono")%></div></td>
	<td><div align="left"><%=f_matriculados.ObtenerValor("celular")%></div></td>
	<td><div align="left"><%=f_matriculados.ObtenerValor("email")%></div></td>
	<td><div align="left"><%=f_matriculados.ObtenerValor("direccion")%></div></td>
	<td><div align="left"><%=f_matriculados.ObtenerValor("comuna")%></div></td>
  </tr>
  <% fila = fila + 1  
  wend %>
</table>
