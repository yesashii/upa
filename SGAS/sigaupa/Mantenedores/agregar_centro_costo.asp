<%
q_ccos_ccod = Request.QueryString("ccos_ccod")
'---------------------------------------------------------------------------------------------------

set pagina = new CPagina
pagina.Titulo = "Centro de Costo"

'---------------------------------------------------------------------------------------------------
set conexion = new CConexion
conexion.Inicializar "upacifico"

set negocio = new CNegocio
negocio.Inicializa conexion

set f_botonera = new CFormulario
f_botonera.Carga_Parametros "adm_centros_costo.xml", "botonera_agregar"

'---------------------------------------------------------------------------------------------------
if EsVacio(q_ccos_ccod) then
	v_txt_lengueta = "Agregar"
else
	v_txt_lengueta = "Editar"
end if
'---------------------------------------------------------------------------------------------------

set f_centro_costo = new CFormulario
f_centro_costo.Carga_Parametros "adm_centros_costo.xml", "agregar_centro_costo"
f_centro_costo.Inicializar conexion

consulta = "select a.ccos_ccod, a.ccos_tdesc, a.ccos_tcodigo ,a.ccos_tcompuesto" & vbCrLf &_
           "from centros_costo a " & vbCrLf &_
		   "where cast(a.ccos_ccod as varchar) = '" & q_ccos_ccod & "'"

f_centro_costo.Consultar consulta
f_centro_costo.SiguienteF
f_centro_costo.AgregaCampoCons "x", "x"
%>


