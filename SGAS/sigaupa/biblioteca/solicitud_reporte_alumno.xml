	  <campos nombre="carreras_alumno">
         <descripcion>Carrera</descripcion>
         <tipo>SELECT</tipo>
         <permiso>OCULTO</permiso>
         <union>carr_ccod</union>
         <salida>carr_tdesc</salida>
         <orden>carr_tdesc desc</orden>
         <anulable>TRUE</anulable>
		 <mensajeNulo>Seleccione Carrera</mensajeNulo>
		 <script>onchange="asigna_carrera(this.options[this.selectedIndex].text);"</script>
		 <id>TO-N</id>
      </campos>
	  <campos nombre="tdes_ccod">
         <descripcion>Motivo de Extensión</descripcion>
         <tipo>SELECT</tipo>
         <permiso>LECTURAESCRITURA</permiso>
         <destino>(select tdes_ccod,tdes_tdesc from tipos_descripciones where tdes_ccod not in (17,3,15,16) )a </destino>
         <union>tdes_ccod</union>
         <salida>tdes_tdesc</salida>
         <orden>tdes_tdesc asc</orden>
         <anulable>TRUE</anulable>
         <mensajeNulo>Seleccione motivo</mensajeNulo>
		 <script>onchange="asignar_valor(this.options[this.selectedIndex].text, this.value, 2);"</script>
         <id>TO-N</id>
      </campos>
