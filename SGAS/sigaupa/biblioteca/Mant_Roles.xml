<Parametros>
   <parametro formulario="f1" anchoTabla="100%" eliminar="TRUE" seleccionarTodo="TRUE"
    editar="TRUE" paginaEdicion="Mant_Roles_Edicion.asp?codigo=%srol_ncorr%" clave="srol_ncorr" nuevaVentana="TRUE" 
	nuevaVentanaAncho="556" nuevaVentanaAlto="230"
	variable="roles" nroRegistros="10" maxLista="10">
	 <tablas nombre="sis_roles" accion="B"/>
     <campos nombre="srol_ncorr">
	    <descripcion>Codigo</descripcion>
		<tipo>INPUT</tipo>
		<permiso>LECTURA</permiso>
		<ancho>50</ancho>
	 </campos>
	 <campos nombre="srol_tdesc">
	    <descripcion>Nombre del Rol</descripcion>
		<tipo>INPUT</tipo>
		<permiso>LECTURA</permiso>
	 </campos>	 
   </parametro>
   
   <parametro formulario="f1_edicion" variable="roles">
