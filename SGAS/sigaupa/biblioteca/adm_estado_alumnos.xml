<Parametros>
   <parametros formulario="botonera">
      <botones nombre="buscar">
         <tipoTexto>BUSCAR</tipoTexto>
         <accion>BUSCAR</accion>
         <formulario>buscador</formulario>
         <funcionValidacion>ValidaBusqueda();</funcionValidacion>
      </botones>
      <botones nombre="guardar">
         <tipoTexto>GUARDAR</tipoTexto>
         <accion>GUARDAR</accion>
         <formulario>edicion</formulario>
         <url>proc_adm_estado_alumnos.asp</url>
         <mensajeConfirmacion>¿Está seguro que desea cambiar el estado del alumno?</mensajeConfirmacion>
		 <funcionValidacion>validaMorosidad();</funcionValidacion>
      </botones>
      <botones nombre="salir">
         <tipoTexto>SALIR</tipoTexto>
         <accion>navegar</accion>
         <url>../lanzadera/lanzadera.asp</url>
      </botones>
	  <botones nombre="nueva_matricula"> 
        <tipoTexto>DEFINIR</tipoTexto>
		<texto>Agregar Matricula de Ajuste.</texto>
	    <accion>AGREGAR</accion>
	    <posicionX>100</posicionX>
	    <posicionY>50</posicionY>
	    <ancho>500</ancho>
	    <alto>450</alto>	   
	 </botones>
	 <botones nombre="buscar_periodo">
         <tipoTexto>DEFINIR</tipoTexto>
		 <texto>Buscar Periodo</texto>
         <accion>BUSCAR</accion>
         <formulario>edicion</formulario>
         <funcionValidacion>ValidaBusqueda();</funcionValidacion>
      </botones>
	  <botones nombre="cerrar">
         <tipoTexto>SALIR</tipoTexto>
         <accion>JAVASCRIPT</accion>
         <funcion>CerrarActualizar();</funcion>
      </botones>
	  <botones nombre="guardar_matricula">
         <tipoTexto>GUARDAR</tipoTexto>
         <accion>GUARDAR</accion>
         <formulario>edicion</formulario>
         <url>proc_agregar_matricula_ajuste.asp</url>
         <mensajeConfirmacion>¿Está seguro que desea agregar una nueva matricula?, una vez agregada no podrá hacer cambios en ella</mensajeConfirmacion>
      </botones>
   </parametros>
   <parametro formulario="busqueda" variable="b">
      <campos nombre="pers_nrut">
         <tipo>INPUT</tipo>
         <permiso>LECTURAESCRITURA</permiso>
         <caracteres>10</caracteres>
         <maxCaracteres>8</maxCaracteres>
         <id>NU-N</id>
      </campos>
      <campos nombre="pers_xdv">
         <tipo>INPUT</tipo>
         <permiso>LECTURAESCRITURA</permiso>
         <caracteres>1</caracteres>
         <maxCaracteres>1</maxCaracteres>
         <id>LN-N</id>
         <script>onBlur="this.value=this.value.toUpperCase();"</script>
      </campos>
   </parametro>
   <parametro formulario="alumno" variable="alumno" anchoTabla="100%" mensajeError="No se encuentra el alumno.">
      <tablas nombre="alumnos" accion="M"/>
	  <tablas nombre="observaciones_estado_matricula" accion="M"/>
      <campos nombre="matr_ncorr">
         <tipo>INPUT</tipo>
         <permiso>OCULTO</permiso>
      </campos>
      <campos nombre="rut">
         <descripcion>R.U.T.</descripcion>
         <tipo>INPUT</tipo>
         <permiso>OCULTO</permiso>
         <alineamiento>CENTER</alineamiento>
         <nowrap>TRUE</nowrap>
      </campos>
      <campos nombre="peri_tdesc">
         <descripcion>Periodo</descripcion>
         <tipo>INPUT</tipo>
         <permiso>LECTURA</permiso>
      </campos>
      <campos nombre="nombre_alumno">
         <descripcion>Nombre</descripcion>
         <tipo>INPUT</tipo>
         <permiso>OCULTO</permiso>
         <alineamiento>CENTER</alineamiento>
      </campos>
      <campos nombre="carrera">
         <descripcion>Carrera</descripcion>
         <tipo>INPUT</tipo>
         <permiso>LECTURA</permiso>
      </campos>
      <campos nombre="especialidad">
         <descripcion>Especialidad</descripcion>
         <tipo>INPUT</tipo>
         <permiso>LECTURA</permiso>
      </campos>
      <campos nombre="emat_ccod">
         <descripcion>Estado matrícula</descripcion>
         <tipo>SELECT</tipo>
         <destino>(select emat_ccod, emat_tdesc from estados_matriculas)a</destino>
         <union>emat_ccod</union>
         <salida>emat_tdesc</salida>
        <!-- <filtro>emat_ccod &lt;&gt; 9</filtro> -->
		<orden>emat_tdesc asc</orden>
         <permiso>LECTURAESCRITURA</permiso>
         <alineamiento>CENTER</alineamiento>
         <anulable>TRUE</anulable>
		 <script>onChange="habilitarCondicional(this.value,this.name);"</script>
         <id>TO-N</id>
      </campos>
      <campos nombre="eoma_ccod">
         <descripcion>Condición</descripcion>
         <tipo>SELECT</tipo>
         <destino>estado_observaciones_matriculas</destino>
         <union>eoma_ccod</union>
         <salida>eoma_tdesc</salida>
         <orden>eoma_ccod</orden>
         <permiso>LECTURAESCRITURA</permiso>
         <alineamiento>CENTER</alineamiento>
         <anulable>TRUE</anulable>
         <mensajeNulo>Seleccione Una</mensajeNulo>
         <mensajeVacio>Seleccione Una</mensajeVacio>
	     <id>TO-S</id>
      </campos>
	  <campos nombre="oema_tobservacion">
         <descripcion>Observación</descripcion>
         <tipo>INPUT</tipo>
         <permiso>LECTURAESCRITURA</permiso>
		 <caracteres>20</caracteres>
		 <maxCaracteres>100</maxCaracteres>
      </campos>
	  <campos nombre="ajustado">
         <tipo>INPUT</tipo>
         <permiso>OCULTO</permiso>
      </campos>
   </parametro>
   <parametro formulario="combo_carrera" variable="a">
	    <listas nombre="lBusqueda">
			<item clave="carr_ccod" valor="carr_tdesc" />
			<item clave="espe_ccod" valor="espe_tdesc" />
			<item clave="plan_ccod" valor="plan_tdesc" />
		</listas>
		<campos nombre="carr_ccod">
			<tipo>INPUT</tipo>
			<permiso>LECTURA</permiso>
		</campos>
		<campos nombre="espe_ccod">
			<tipo>INPUT</tipo>
			<permiso>LECTURA</permiso>
		</campos>
		<campos nombre="plan_ccod">
			<tipo>INPUT</tipo>
			<permiso>LECTURA</permiso>
		</campos>
  </parametro>
  
   <parametro formulario="datos_extras" variable="a">
   <campos nombre="peri_ccod">
      <tipo>SELECT</tipo>
	  <union>peri_ccod</union>
	  <salida>peri_tdesc</salida>
      <orden>peri_tdesc asc </orden>	  
	  <permiso>LECTURAESCRITURA</permiso>
	  <anulable>true</anulable>
	  <mensajeNulo>Periodo Matrícula</mensajeNulo>
	  <mensajeVacio>Periodo Matrícula</mensajeVacio>
	  <id>TO-N</id>
   </campos>
   <campos nombre="emat_ccod">
      <tipo>SELECT</tipo>
	  <destino>(select emat_ccod,emat_tdesc from estados_matriculas where emat_ccod in (3,4,5,7,8,10,13,14,15,16)) a</destino>
	  <union>emat_ccod</union>
	  <salida>emat_tdesc</salida>
      <orden>emat_tdesc asc </orden>	  
	  <permiso>LECTURAESCRITURA</permiso>
	  <anulable>true</anulable>
	  <mensajeNulo>Estado Alumno</mensajeNulo>
	  <mensajeVacio>Estado Alumno</mensajeVacio>
	  <id>TO-N</id>
   </campos>
  </parametro>
  
  
</Parametros>
