<?xml version="1.0" encoding="iso-8859-1"?>
<Parametros>
  <parametro formulario="botonera">
     <botones nombre="lanzadera"> 
        <tipoTexto>SALIR</tipoTexto>
	    <accion>NAVEGAR</accion>
		<url>../lanzadera/lanzadera.asp</url>
	 </botones>
	 <botones nombre="cancelar"> 
        <tipoTexto>SALIR</tipoTexto>
	    <accion>CERRAR</accion>
	 </botones>
	 <botones nombre="buscar"> 
        <tipoTexto>BUSCAR</tipoTexto>
	    <accion>BUSCAR</accion>
	    <formulario>buscador</formulario>
		<soloUnClick>TRUE</soloUnClick>
	 </botones>
	 <botones nombre="nueva"> 
        <tipoTexto>AGREGAR</tipoTexto>
	    <accion>AGREGAR</accion>
	    <posicionX>100</posicionX>
	    <posicionY>50</posicionY>
	    <ancho>750</ancho>
	    <alto>400</alto>	   
	 </botones>
	 <botones nombre="guardar_nueva"> 
        <tipoTexto>GUARDAR</tipoTexto>
	    <accion>GUARDAR</accion>
	    <url>Proc_Planes_Agregar.asp</url>
	    <formulario>edicion</formulario>
	</botones>
	<botones nombre="eliminar"> 
      <tipoTexto>ELIMINAR</tipoTexto>
	  <accion>ELIMINAR</accion>
	  <formulario>edicion</formulario>
	  <url>periodos_egreso_eliminar.asp</url>
	</botones> 
  </parametro>
 
 <parametro formulario="f_busqueda" variable="busqueda">
   <campos nombre="peri_ccod">
      <tipo>SELECT</tipo>
	  <destino>(select peri_ccod,peri_tdesc from periodos_academicos where plec_ccod in (1,2))a</destino> 
	  <union>peri_ccod</union>
	  <salida>peri_tdesc</salida>
	  <permiso>LECTURAESCRITURA</permiso>
	  <anulable>true</anulable>
	  <orden>peri_ccod desc</orden>
	  <mensajeNulo>Seleccione Período</mensajeNulo>
	  <id>TO-N</id>
   </campos> 
  </parametro>
  <parametro  paginaEdicion="periodos_egreso_agregar.asp?peri_ccod=%peri_ccod%&amp;pegr_ncorr=%pegr_ncorr%" 
      nuevaVentanaAlto="500" formulario="f_periodo_egreso"  nroRegistros="10"  nuevaVentanaAncho="770"
      eliminar="TRUE" maxLista="10" clave="PEGR_NCORR"
	  mensajeError="No se encontraron períodos de egreso" seleccionarTodo="TRUE" editar="TRUE"  anchoTabla="100%"  nuevaVentana="TRUE" 
	  variable="periodos" >
      <tablas nombre="PRE_PERIODOS_EGRESO" accion="B"/>
	  <campos nombre="PERI_CCOD">
		<tipo>INPUT</tipo>
		<permiso>OCULTO</permiso>				
	 </campos>
	 <campos nombre="PERI_TDESC">
	    <descripcion>Período</descripcion>
		<tipo>INPUT</tipo>
		<permiso>LECTURA</permiso>		
	 </campos>
	 <campos nombre="EPEG_TDESC">
	    <descripcion>Estado Período</descripcion>
		<tipo>INPUT</tipo>
		<permiso>LECTURA</permiso>		
	 </campos>
	 <campos nombre="PEGR_FINICIO">
	    <descripcion>INICIO</descripcion>
		<tipo>INPUT</tipo>
		<permiso>LECTURA</permiso>
		<alineamiento>CENTER</alineamiento>		
	 </campos>
	 <campos nombre="PEGR_FTERMINO">
	    <descripcion>TÉRMINO</descripcion>
		<tipo>INPUT</tipo>
		<permiso>LECTURA</permiso>		
		<alineamiento>CENTER</alineamiento>
	 </campos>	
   </parametro>
   <parametro formulario="f_nuevo" variable="periodos_egreso">
    <tablas nombre="pre_periodos_egreso" accion="M"/>
	 <campos nombre="pegr_ncorr">
	 	<tipo>INPUT</tipo>
		<permiso>OCULTO</permiso>
	 </campos>
	 <campos nombre="peri_ccod">
	 	<tipo>INPUT</tipo>
		<permiso>OCULTO</permiso>
	 </campos>
	 <campos nombre="epeg_ccod">
	 	<tipo>Select</tipo>
		<destino>pre_estados_periodos_egreso</destino>
	    <union>epeg_ccod</union> 
      	<salida>epeg_tdesc</salida> 
      	<permiso>LECTURAESCRITURA</permiso> 
	  	<orden>epeg_tdesc</orden>
	  	<mensajeNulo>Seleccione un Estado</mensajeNulo>
	  	<mensajeVacio>No hay estados creados</mensajeVacio>
	  	<id>TO-N</id>
	 </campos>
	 <campos nombre="pegr_finicio">
	 	<tipo>INPUT</tipo>
		<permiso>LECTURAESCRITURA</permiso>
		<caracteres>12</caracteres>
	    <maxCaracteres>10</maxCaracteres>
	    <id>FE-S</id>		
	 </campos>
	 <campos nombre="pegr_ftermino">
	 	<tipo>INPUT</tipo>
		<permiso>LECTURAESCRITURA</permiso>
		<caracteres>12</caracteres>
	    <maxCaracteres>10</maxCaracteres>
	    <id>FE-S</id>		
	 </campos>
   </parametro>
   
 </Parametros>
