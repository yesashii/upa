<?xml version="1.0" encoding="iso-8859-1"?>
<Parametros>
 <parametro formulario="botonera">
    <botones nombre="lanzadera"> 
        <tipoTexto>SALIR</tipoTexto>
	    <accion>NAVEGAR</accion>
		<url>../lanzadera/lanzadera.asp</url>
	 </botones>
   <botones nombre="imprimir">
       <tipoTexto>DEFINIR</tipoTexto>
	   <texto>Imprimir</texto>
       <accion>GUARDAR</accion>
	   <formulario>edicion</formulario>
	   <url>../ReportesNet/barras_alumnos.aspx</url>	
	   <target>_BLANK</target>   
   </botones>
	<botones nombre="buscar_alumnos"> 
      <tipoTexto>BUSCAR</tipoTexto>
	  <accion>BUSCAR</accion>
	  <formulario>buscador</formulario>
	  <soloUnClick>TRUE</soloUnClick>
	</botones>
</parametro>


 <parametro formulario="busqueda_alumnos" variable="busqueda">
    <campos nombre="sede_ccod">
		<tipo>SELECT</tipo>
		<destino>sedes</destino> 
		<union>sede_ccod</union>
		<salida>sede_tdesc</salida>
		<permiso>LECTURAESCRITURA</permiso>
		<filtro>sede_ccod not in (3,5,6)</filtro>
		<anulable>true</anulable>
		<mensajeNulo>Seleccione Sede</mensajeNulo>
	</campos>
 	<campos nombre="post_bnuevo">
         <tipo>SELECT</tipo>
         <destino>( SELECT 'S' as post_bnuevo, 'ALUMNOS NUEVOS' AS tipo_alumnos UNION SELECT 'N' as post_bnuevo,'ALUMNOS ANTIGUOS' AS tipo_alumnos ) a</destino>
         <union>post_bnuevo</union>
         <salida>tipo_alumnos</salida>
		 <orden>a.tipo_alumnos</orden>
         <permiso>LECTURAESCRITURA</permiso>
		 <anulable>TRUE</anulable>
		 <mensajeNulo>--Seleccione tipo de alumno--</mensajeNulo>
    </campos>
	<campos nombre="carr_ccod">
		<tipo>SELECT</tipo>
		<destino>carreras</destino> 
		<union>carr_ccod</union>
		<salida>carr_tdesc</salida>
		<permiso>LECTURAESCRITURA</permiso>
		<filtro>tcar_ccod in (1) and ecar_ccod in (1) </filtro>
		<anulable>true</anulable>
		<mensajeNulo>Seleccione Carrera</mensajeNulo>
	</campos>
		<campos nombre="pers_nrut">
         <tipo>INPUT</tipo>
         <permiso>LECTURAESCRITURA</permiso>
         <caracteres>10</caracteres>
         <maxCaracteres>8</maxCaracteres>
         <id>NU-S</id>
      </campos>
      <campos nombre="pers_xdv">
         <tipo>INPUT</tipo>
         <permiso>LECTURAESCRITURA</permiso>
         <caracteres>1</caracteres>
         <maxCaracteres>1</maxCaracteres>
         <script>onBlur="this.value=this.value.toUpperCase();"</script>
         <id>LN-S</id>
      </campos>
  </parametro>
 
  <parametro formulario="f_alumnos" colorSeleccionado="#CCCCCC" colorResaltado="#999999" nroRegistros="20" maxLista="10" 
	     anchoTabla="100%" nuevaVentana="FALSE"  mensajeError="No se encontraron alumnos para los criterios de busqueda...">
	 
       <campos nombre="carrera">
		<descripcion>Carrera</descripcion>
		<tipo>INPUT</tipo>
		<permiso>LECTURA</permiso>
		<alineamiento>LEFT</alineamiento>
	  </campos>
	  <campos nombre="sede">
         <descripcion>Sede</descripcion>
         <tipo>INPUT</tipo>
         <permiso>LECTURA</permiso>
      </campos>
	  <campos nombre="nombre_alumno">
         <descripcion>Nombre Alumno</descripcion>
         <tipo>INPUT</tipo>
         <permiso>LECTURA</permiso>
     </campos>
	 <campos nombre="rut_alumno">
         <descripcion>Rut</descripcion>
         <tipo>INPUT</tipo>
         <permiso>LECTURA</permiso>
     </campos>
	  <campos nombre="tipo_alumno">
         <descripcion>Tipo Alumno</descripcion>
         <tipo>INPUT</tipo>
         <permiso>LECTURA</permiso>
      </campos>	  
 </parametro>
 
</Parametros>