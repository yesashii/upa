<parametro formulario="buscador" variable="busqueda">
	<campos nombre="solicitud">
		<tipo>INPUT</tipo>
		<permiso>LECTURAESCRITURA</permiso>
		<caracteres>10</caracteres>
		<maxCaracteres>8</maxCaracteres>
		<id>NU-N</id>
	</campos>
	<campos nombre="tsol_ccod">
		 <tipo>SELECT</tipo>
		 <destino>ocag_tipo_solicitud</destino>
		 <union>tsol_ccod</union>
		 <salida>tsol_tdesc</salida>
		 <permiso>LECTURAESCRITURA</permiso>
		 <anulable>false</anulable>
		 <filtro>tsol_ccod not in (9)</filtro>
	</campos>
		<campos nombre="anos_ccod">
		  <tipo>SELECT</tipo>
		  <destino>(select anos_ccod, case when anos_ccod=year(getdate()) then 1 else 0 end as orden 
from anos where anos_ccod between year(getdate())-1 and year(getdate())+1) as tabla </destino> 
		  <union>anos_ccod</union>
		  <salida>anos_ccod</salida>
		  <filtro>anos_ccod between year(getdate())-1 and year(getdate())+1</filtro>
		  <permiso>LECTURAESCRITURA</permiso>
		  <orden>orden desc</orden>
		  <deshabilitado>false</deshabilitado>
		  <id>TO-N</id>		  
	</campos>
		<campos nombre="tgas_ccod">
		 <tipo>SELECT</tipo>
		 <destino>ocag_tipo_gasto</destino>
		 <union>tgas_ccod</union>
		 <salida>tgas_tdesc</salida>
		 <permiso>LECTURAESCRITURA</permiso>
		 <anulable>false</anulable>
	</campos>
</parametro>

