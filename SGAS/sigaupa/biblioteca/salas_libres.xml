		<permiso>LECTURA</permiso>
	 </campos>
	 <campos nombre="tipo">
	    <descripcion>Tipo</descripcion>
		<tipo>INPUT</tipo>
		<permiso>LECTURA</permiso>
	 </campos> 
	 <campos nombre="cupo">
	    <descripcion>Cupos</descripcion>
		<tipo>INPUT</tipo>
		<permiso>LECTURA</permiso>
	 </campos>
	 <campos nombre="sede">
	    <descripcion>Sede</descripcion>
		<tipo>INPUT</tipo>
		<permiso>LECTURA</permiso>
	 </campos>
   </parametro> 
