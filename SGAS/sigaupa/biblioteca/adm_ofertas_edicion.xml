<?xml version="1.0" encoding="iso-8859-1"?>
<Parametros>
   <parametro formulario="t_ofertas_academicas" variable="ofertas" clave="ofer_ncorr">
      <tablas nombre="ofertas_academicas" accion="M"/>
      <campos nombre="ofer_ncorr">
         <tipo>HIDDEN</tipo>
         <permiso>LECTURAESCRITURA</permiso>
      </campos>
      <campos nombre="sede_ccod">
         <tipo>SELECT</tipo>
         <destino>sedes</destino>
         <union>sede_ccod</union>
         <salida>sede_tdesc</salida>
         <permiso>LECTURA</permiso>
      </campos>
      <campos nombre="peri_ccod">
         <tipo>SELECT</tipo>
         <destino>(SELECT peri_ccod, cast(peri_tdesc as varchar) + ' ' + cast(anos_ccod as varchar) AS descripcion FROM periodos_academicos ) a</destino>
         <union>peri_ccod</union>
         <salida>descripcion</salida>
		 <orden>a.peri_ccod</orden>
         <permiso>LECTURA</permiso>
      </campos>
       <campos nombre="post_bnuevo">
         <tipo>SELECT</tipo>
         <destino>( SELECT 'S' as post_bnuevo, 'ALUMNOS NUEVOS' AS tipo_alumnos UNION SELECT 'N' as post_bnuevo,'ALUMNOS ANTIGUOS' AS tipo_alumnos ) a</destino>
         <union>post_bnuevo</union>
         <salida>tipo_alumnos</salida>
		 <orden>a.tipo_alumnos</orden>
         <permiso>LECTURAESCRITURA</permiso>
		 <anulable>TRUE</anulable>
		 <mensajeNulo>--Seleccione tipo de alumno--</mensajeNulo>
		  <script>onChange="tipo_alumno(this.form, this.value)"</script>
      </campos>
	   <campos nombre="aran_ncorr">
         <tipo>HIDDEN</tipo>
         <permiso>LECTURAESCRITURA</permiso>
      </campos>
      <campos nombre="carr_ccod">
         <tipo>SELECT</tipo>
         <destino>carreras</destino>
         <union>carr_ccod</union>
         <salida>carr_tdesc</salida>
         <permiso>LECTURA</permiso>
      </campos>
      <campos nombre="espe_ccod">
         <tipo>SELECT</tipo>
         <destino>especialidades</destino>
         <union>espe_ccod</union>
         <salida>espe_tdesc</salida>
         <permiso>LECTURA</permiso>
      </campos>
      <campos nombre="jorn_ccod">
         <tipo>SELECT</tipo>
         <destino>jornadas</destino>
         <union>jorn_ccod</union>
         <salida>jorn_tdesc</salida>
         <permiso>LECTURAESCRITURA</permiso>
      </campos>
      <campos nombre="ofer_nvacantes">
         <tipo>INPUT</tipo>
         <permiso>LECTURAESCRITURA</permiso>
      </campos>
      <campos nombre="ofer_nquorum">
         <tipo>INPUT</tipo>
         <permiso>LECTURAESCRITURA</permiso>
      </campos>
	  <campos nombre="ofer_bpaga_examen">
		 <tipo>BOLEANO</tipo>
         <objeto>CHECKBOX</objeto>
         <permiso>LECTURAESCRITURA</permiso>
		 <valorVerdadero>1</valorVerdadero>
		 <valorFalso>0</valorFalso>
      </campos>
	  <campos nombre="ofer_bpublica">
		 <tipo>BOLEANO</tipo>
         <objeto>CHECKBOX</objeto>
         <permiso>LECTURAESCRITURA</permiso>
		 <valorVerdadero>1</valorVerdadero>
		 <valorFalso>0</valorFalso>
      </campos>
	  <campos nombre="ofer_bactiva">
		 <tipo>BOLEANO</tipo>
         <objeto>CHECKBOX</objeto>
         <permiso>LECTURAESCRITURA</permiso>
		 <valorVerdadero>1</valorVerdadero>
		 <valorFalso>0</valorFalso>
      </campos>
   </parametro>
   <parametro formulario="t_aranceles" anchoTabla="100%" clave="aran_ncorr" variable="aranceles">
