         <tipoTexto>DEFINIR</tipoTexto>
         <texto>Cambiar de carrera...</texto>
         <accion>GUARDAR</accion>
         <formulario>edicion</formulario>
         <mensajeConfirmacion>¿Está seguro que desea cambiar la carrera?\n\nSi lo hace, será reconocido como alumno nuevo para calcular su arancel, incluso si vuelve a elegir la misma carrera.</mensajeConfirmacion>
         <url>proc_cambiar_carrera.asp</url>
      </botones>
   </parametro>
   <parametro formulario="oferta_academica" variable="oferta">
      <campos nombre="sede_ccod">
         <tipo>SELECT</tipo>
         <destino>sedes</destino>
         <union>sede_ccod</union>
         <salida>sede_tdesc</salida>
         <permiso>LECTURAESCRITURA</permiso>
         <anulable>TRUE</anulable>
         <mensajeNulo>Seleccione sede</mensajeNulo>
         <mensajeVacio>No existen ofertas disponibles</mensajeVacio>
         <script>onChange="FiltrarCarreras(this.form);"</script>
         <id>TO-N</id>
      </campos>
      <campos nombre="c_sede_ccod">
         <tipo>SELECT</tipo>
         <destino>sedes</destino>
         <union>sede_ccod</union>
         <salida>sede_tdesc</salida>
         <permiso>OCULTO</permiso>
         <anulable>TRUE</anulable>
         <mensajeNulo>Seleccione sede</mensajeNulo>
         <mensajeVacio>No existen ofertas disponibles</mensajeVacio>
         <script>onChange="FiltrarCarreras(this.form);"</script>
         <id>TO-N</id>
      </campos>
      <campos nombre="carr_ccod">
         <tipo>SELECT</tipo>
         <destino>carreras</destino>
         <union>carr_ccod</union>
         <salida>carr_tdesc</salida>
         <filtro>1=2</filtro>
         <permiso>LECTURAESCRITURA</permiso>
         <anulable>TRUE</anulable>
         <mensajeNulo>Seleccione carrera</mensajeNulo>
         <script>onChange="FiltrarEspecialidades(this.form);"</script>
         <id>TO-N</id>
      </campos>
      <campos nombre="c_carr_ccod">
         <tipo>SELECT</tipo>
         <destino>carreras</destino>
         <union>carr_ccod</union>
         <salida>carr_tdesc</salida>
         <permiso>OCULTO</permiso>
         <anulable>TRUE</anulable>
         <mensajeNulo>Seleccione carrera</mensajeNulo>
         <script>onChange="FiltrarEspecialidades(this.form);"</script>
         <id>TO-N</id>
      </campos>
      <campos nombre="espe_ccod">
         <tipo>SELECT</tipo>
         <destino>especialidades</destino>
         <union>espe_ccod</union>
         <salida>espe_tdesc</salida>
         <filtro>1=2</filtro>
         <permiso>LECTURAESCRITURA</permiso>
         <anulable>TRUE</anulable>
         <mensajeNulo>Seleccione especialidad</mensajeNulo>
         <script>onChange="FiltrarJornadas(this.form);"</script>
         <id>TO-N</id>
      </campos>
      <campos nombre="jorn_ccod">
         <tipo>SELECT</tipo>
         <destino>jornadas</destino>
         <union>jorn_ccod</union>
         <salida>jorn_tdesc</salida>
         <filtro>1=2</filtro>
         <permiso>LECTURAESCRITURA</permiso>
         <anulable>TRUE</anulable>
         <mensajeNulo>Seleccione jornada</mensajeNulo>
         <id>TO-N</id>
      </campos>
	  
	  <campos nombre="c_jorn_ccod">
         <tipo>SELECT</tipo>
         <destino>jornadas</destino>
         <union>jorn_ccod</union>
         <salida>jorn_tdesc</salida>
         <permiso>OCULTO</permiso>
         <id>TO-N</id>
      </campos>
	  
   </parametro>
   
   
   <parametro formulario="lista_ofertas" variable="oferta_academica">
      <listas nombre="oferta_academica">
         <item clave="sede_ccod" valor="sede_tdesc"/>
         <item clave="carr_ccod" valor="carr_tdesc"/>
         <item clave="espe_ccod" valor="espe_tdesc"/>
         <item clave="jorn_ccod" valor="jorn_tdesc"/>
      </listas>
   </parametro>
   <parametro formulario="postulacion" variable="postulacion">
      <tablas nombre="detalle_postulantes" accion="M"/>
   </parametro>
    <parametro formulario="postulacion_antiguo" variable="postulacion">
      <tablas nombre="postulantes" accion="M"/>
	  
   </parametro>
   
