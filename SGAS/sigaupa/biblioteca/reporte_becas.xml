<?xml version="1.0" encoding="iso-8859-1"?>
<Parametros>
  <parametro formulario="botonera">
	   	<botones nombre="salir"> 
		  	<tipoTexto>SALIR</tipoTexto>
		  	<accion>NAVEGAR</accion>
		  	<url>../lanzadera/lanzadera.asp</url>
		</botones>  
	   	<botones nombre="buscar"> 
		  	<tipoTexto>BUSCAR</tipoTexto>
		  	<accion>BUSCAR</accion>
		  	<formulario>buscador</formulario>
		  	<soloUnClick>TRUE</soloUnClick>	  
		</botones>
		<botones nombre="excel">
			 <tipoTexto>DEFINIR</tipoTexto>
			 <texto>Excel</texto>
			 <accion>BUSCAR</accion>
			 <url>reporte_becas_excel.asp</url>
			 <formulario>buscador</formulario>
        </botones>
	  
   </parametro>   
  
  <parametro formulario="busqueda_becas" variable="busqueda">
   <campos nombre="tdet_ccod">
      <tipo>SELECT</tipo>
	  <destino>tipos_detalle</destino> 
	  <union>tdet_ccod</union>
	  <salida>tdet_tdesc</salida>
	  <filtro>tben_ccod in (2,3) and tdet_bvigente not in ('A') </filtro>
	  <orden>tdet_tdesc</orden>
	  <permiso>LECTURAESCRITURA</permiso>
	  <anulable>true</anulable>
	  <mensajeNulo>Todos los Beneficios</mensajeNulo>
	  
	 </campos>
	<campos nombre="carr_ccod">
      <tipo>SELECT</tipo>
	  <destino>Carreras</destino> 
	  <union>carr_ccod</union>
	  <salida>carr_tdesc</salida>
	  <orden>carr_tdesc</orden>
	  <!--<filtro>tben_ccod in (2,3) and tdet_bvigente='S'</filtro>-->
	  <permiso>LECTURAESCRITURA</permiso>
	  <anulable>true</anulable>
	  <mensajeNulo>Todas las Carreras</mensajeNulo>
	 </campos>
  </parametro>
  
   
