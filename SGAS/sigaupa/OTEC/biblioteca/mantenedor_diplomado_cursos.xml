	<botones nombre="agregar">
         <tipoTexto>DEFINIR</tipoTexto>
		 <texto>Agregar Curso</texto>
         <accion>JAVASCRIPT</accion>
         <funcion>ingresa_cc()</funcion>
    </botones>
	<botones nombre="anular">
        <accion>ELIMINAR</accion>
		<tipoTexto>DEFINIR</tipoTexto>
       	<texto>Anular</texto>
		<formulario>edicion</formulario>
        <url>eliminar_condicion_pago_proc.asp</url>
    </botones>
	<botones nombre="guardar_curso">
        <accion>GUARDAR</accion>
        <tipoTexto>DEFINIR</tipoTexto>
       	<texto>Guardar</texto>
		<formulario>edicion</formulario>
        <url>proc_agregar_curos_diplomado.asp</url>
    </botones>
	<botones nombre="cerrar">
         <tipoTexto>CANCELAR</tipoTexto>
