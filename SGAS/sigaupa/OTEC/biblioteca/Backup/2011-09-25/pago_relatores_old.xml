      <campos nombre="secc_ccod_pres">
         <tipo>input</tipo>
         <destino>(SELECT DISTINCT cast(a.asig_ccod as varchar)+'-' + cast(b.secc_tdesc as varchar)+ ' ' + cast(a.asig_tdesc as varchar)  AS asignatura_seccion, c.nive_ccod, b.secc_ccod FROM asignaturas a, secciones b, malla_curricular c,planes_estudio d, especialidades e WHERE a.asig_ccod = b.asig_ccod AND c.plan_ccod = d.plan_ccod AND a.asig_ccod = c.asig_ccod ) a</destino>
         <union>secc_ccod</union>
         <codigo>secc_ccod</codigo>
         <salida>Asignatura_Seccion</salida>
         <permiso>LECTURA</permiso>
         <columnas>4</columnas>
      </campos>
      <campos nombre="hora_ccod">
         <tipo>select</tipo>
         <destino>(select distinct cast(b.hora_ccod as varchar)+' - '+ cast(datepart(hour,a.hora_hinicio) as varchar)+':'+ cast(datepart(minute,a.hora_hinicio) as varchar) +' - '+ cast(datepart(hour,a.hora_htermino) as varchar)+':'+ cast(datepart(minute,a.hora_htermino) as varchar) as Bloque_Horario,b.hora_ccod, a.sede_ccod from horarios_sedes_otec a, horarios b where a.hora_ccod=b.hora_ccod ) c</destino>
         <union>hora_ccod</union>
         <codigo>hora_ccod</codigo>
		 <orden>c.hora_ccod</orden>
         <salida>Bloque_Horario</salida>
         <permiso>LECTURAESCRITURA</permiso>
         <columnas>4</columnas>
