      <campos nombre="saldo">
         <descripcion>A Pagar</descripcion>
         <tipo>INPUT</tipo>
         <permiso>LECTURA</permiso>
         <alineamiento>RIGHT</alineamiento>
         <formato>MONEDA</formato>
         <nowrap>TRUE</nowrap>
