<?xml version="1.0" encoding="iso-8859-1"?>
<Parametros>
   <parametro formulario="botonera">
      <botones nombre="buscar">
         <tipoTexto>BUSCAR</tipoTexto>
         <accion>BUSCAR</accion>
         <formulario>buscador</formulario>
         <funcionValidacion>ValidaBusqueda();</funcionValidacion>
      </botones>
      <botones nombre="pagar">
         <tipoTexto>DEFINIR</tipoTexto>
         <texto>Facturar</texto>
         <url>factura.asp</url>
         <funcionValidacion>valida_pagos(this.form)</funcionValidacion>
         <formulario>edicion</formulario>
         <accion>GUARDAR</accion>
         <target>ventana</target>
      </botones>
      <botones nombre="salir">
         <tipoTexto>SALIR</tipoTexto>
         <accion>NAVEGAR</accion>
         <url>../lanzadera/lanzadera.asp</url>
      </botones>
   </parametro>


   <parametro formulario="busqueda" variable="busqueda">
      <campos nombre="pers_nrut">
         <tipo>INPUT</tipo>
         <permiso>LECTURAESCRITURA</permiso>
         <caracteres>10</caracteres>
         <maxCaracteres>8</maxCaracteres>
         <id>NU-N</id>
      </campos>
      <campos nombre="pers_xdv">
         <tipo>INPUT</tipo>
         <permiso>LECTURAESCRITURA</permiso>
         <caracteres>1</caracteres>
         <maxCaracteres>1</maxCaracteres>
         <id>LN-N</id>
      </campos>
   </parametro>

   <parametro formulario="compromisos_por_pagar" variable="cc_compromisos_pendientes" 
   mensajeError="No existen compromisos por pagar para este alumno." anchoTabla="100%" 
   eliminar="TRUE" clave="dcom_ncompromiso" seleccionarTodo="TRUE">
      <campos nombre="tcom_ccod">
         <tipo>INPUT</tipo>
         <permiso>OCULTO</permiso>
      </campos>
      <campos nombre="inst_ccod">
         <tipo>INPUT</tipo>
         <permiso>OCULTO</permiso>
      </campos>
      <campos nombre="comp_ndocto">
         <tipo>INPUT</tipo>
         <permiso>OCULTO</permiso>
      </campos>
      <campos nombre="pers_ncorr">
         <tipo>INPUT</tipo>
         <permiso>OCULTO</permiso>
      </campos>	
      <campos nombre="num_oc">
         <tipo>INPUT</tipo>
         <permiso>OCULTO</permiso>
      </campos>	    
      <campos nombre="c_comp_ndocto">
