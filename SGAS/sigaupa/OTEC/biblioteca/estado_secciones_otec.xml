 <parametro formulario="f_busqueda" variable="b">
   <campos nombre="dcur_ncorr">
      <tipo>SELECT</tipo>
	  <destino>diplomados_cursos</destino> 
	  <union>DCUR_NCORR</union>
	  <salida>DCUR_TDESC</salida>
      <orden>DCUR_TDESC asc </orden>	  
	  <permiso>LECTURAESCRITURA</permiso>
	  <anulable>true</anulable>
	  <mensajeNulo>Seleccione Programa</mensajeNulo>
	  <mensajeVacio>Seleccione Programa</mensajeVacio>
	  <id>TO-N</id>
   </campos>
   <campos nombre="sede_ccod">
      <tipo>SELECT</tipo>
	  <destino>(select sede_ccod,sede_tdesc from sedes where sede_ccod in (1,2,4,7,8))a</destino> 
	  <union>sede_ccod</union>
	  <salida>sede_tdesc</salida>
      <orden>sede_ccod asc </orden>	  
	  <permiso>LECTURAESCRITURA</permiso>
	  <anulable>true</anulable>
	  <mensajeNulo>Seleccione Sede</mensajeNulo>
	  <mensajeVacio>Seleccione Sede</mensajeVacio>
	  <id>TO-N</id>
   </campos>
  </parametro> 
 
